<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<description>Note Taker Application</description>
	<servlet>
		<servlet-name>CreateNote</servlet-name>
		<servlet-class>servlets.CreateNote</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetNotes</servlet-name>
		<servlet-class>servlets.GetNotes</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>DeletePost</display-name>
		<servlet-name>DeletePost</servlet-name>
		<servlet-class>servlets.DeletePost</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateNote</servlet-name>
		<url-pattern>/CreateNote</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetNotes</servlet-name>
		<url-pattern>/GetNotes</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeletePost</servlet-name>
		<url-pattern>/DeletePost</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>JDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
</web-app>
